<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.japanzai.koroshiya"
    android:versionCode="35"
    android:versionName="1.13.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="com.japanzai.koroshiya.reader.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="user" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.japanzai.koroshiya.filechooser.FileChooser"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name="com.japanzai.koroshiya.settings.SettingsView"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name="com.japanzai.koroshiya.reader.Reader" />
        <activity android:name="com.japanzai.koroshiya.reader.Progress" />
        <activity android:name="com.japanzai.koroshiya.About" />
        <activity android:name="com.japanzai.koroshiya.Credits" />
        <activity android:name="com.japanzai.koroshiya.ErrorReport" />
    </application>

</manifest>