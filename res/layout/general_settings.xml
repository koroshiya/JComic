<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/blue_grey_800">

        <TextView
            android:id="@+id/btn_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu"
            android:gravity="center_horizontal"
            android:minWidth="55dp"
            android:text="@string/drawer_menu"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:clickable="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/reset"
            android:gravity="center_horizontal"
            android:minWidth="55dp"
            android:text="@string/setting_reset"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:clickable="true"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabGeneralSettingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tabGeneralSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>
</LinearLayout>